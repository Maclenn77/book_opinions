<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fullname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @followings.each do |user| %>
      <tr>
        <td><%= user.followee.name %></td>
        <td><%= user.followee.fullname %></td>
        <td><%= follow(user.followee, current_user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sign up', new_user_path %>
