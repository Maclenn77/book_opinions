<p id="notice"><%= notice %></p>

<h1>Opinions</h1>
<%= render 'form', opinion: @opinion %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @opinions.nil? %>
    <%= 'No book opinions' %>
    <% else %>
    <% @opinions.each do |opinion| %>
      <tr>
        <td><%= opinion.title %></td>
        <td><%= opinion.body %></td>
        <td><%= link_to 'Show', user_opinion_path(opinion.user, opinion) %></td>
        <td><%= link_to 'Edit', edit_user_opinion_path(opinion.user, opinion) %></td>
        <td><%= link_to 'Destroy', user_opinion_path(opinion.user, opinion), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opinion', new_user_opinion_path(user_id: current_user.id) unless current_user.nil? %>
